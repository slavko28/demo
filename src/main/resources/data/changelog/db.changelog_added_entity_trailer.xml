<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="added_entity_trailer" author="irvin">

        <createTable tableName="trailer">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="model" type="varchar(50)"/>
            <column name="type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="license_plate" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="company_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="volume" type="decimal(3,3)">
                <constraints nullable="false"/>
            </column>
            <column name="load_capacity" type="decimal(3,3)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="trailer"
                                 constraintName="fk_trailer_company_id"
                                 referencedColumnNames="id"
                                 referencedTableName="company"/>

    </changeSet>
</databaseChangeLog>



