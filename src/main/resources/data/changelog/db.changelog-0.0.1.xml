<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="create-user-table" author="irvin">

        <createTable tableName="user">
            <column name="user_id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints unique="true" nullable="true"/>
            </column>
            <column name="password" type="varchar(100)"/>
            <column name="name" type="varchar(50)"/>
            <column name="last_name" type="varchar(50)"/>
            <column name="phone_number" type="varchar(30)"/>
            <column name="active" type="boolean" valueBoolean="false">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createIndex indexName="idx_user_email"
                     tableName="user"
                     unique="true">
            <column name="email" type="varchar(100)"/>
        </createIndex>

        <createTable tableName="role">
            <column name="role_id" type="int" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role_name" type="varchar(50)"/>
        </createTable>

        <createTable tableName="user_role">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="user_id, role_id" tableName="user_role"/>

        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="user_role"
                                 constraintName="fk_role_name"
                                 referencedColumnNames="role_id"
                                 referencedTableName="role"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_role"
                                 constraintName="fk_user_id"
                                 referencedColumnNames="user_id"
                                 referencedTableName="user"/>

        <loadData encoding="UTF-8"
                  file="data/role.csv"
                  separator=";"
                  tableName="role"/>

        <loadData encoding="UTF-8"
                  file="data/user.csv"
                  separator=";"
                  tableName="user">
            <column name="active" type="boolean"/>
        </loadData>


        <loadData encoding="UTF-8"
                  file="data/role_user.csv"
                  separator=";"
                  tableName="user_role"/>

    </changeSet>
</databaseChangeLog>
